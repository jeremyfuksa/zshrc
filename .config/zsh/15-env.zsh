# Environment Variables
# -------------------

# Set default editor
export EDITOR='nano'
export VISUAL='nano'

# Set language
export LANG='en_US.UTF-8'
export LC_ALL='en_US.UTF-8'

# Set less options
export LESS='-R --use-color -Dd+r$Du+b'
export LESSHISTFILE='-'

# Set grep options
export GREP_OPTIONS='--color=auto'
export GREP_COLOR='1;32'

# Set pager
export PAGER='less' 
